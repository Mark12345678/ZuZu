<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/history_test1"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/history_img"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_goods"
                android:layout_marginBottom="5dp"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/item_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/history_goodsname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="迈特凯"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentLeft="true"
                            />

                        <TextView
                            android:id="@+id/history_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥12.00"
                            android:textColor="@color/red"
                            android:layout_marginRight="15dp"
                            android:textSize="18dp"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/history_describe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="大家好，我是凯老师……，我超级腻害，我可以一个打十个，渣渣卡卡西"
                        android:layout_below="@id/item_center"/>

                    <View
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        style="@style/line_vertical" />

                    <View
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        style="@style/line_vertical" />

                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>

        <View  android:layout_marginTop="-10dp"
            android:layout_below="@id/history_test1"
            style="@style/line_vertical"/>

        <LinearLayout
            android:layout_marginTop="-10dp"
            android:layout_below="@id/history_test1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="租借人："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/history_user_phone"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="1552****529"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View style="@style/line_horizontal"/>

            <RelativeLayout
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="物主："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/history_master_phone"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="1552****529"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
