<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rent_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:src="@drawable/default_head">


            </de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:id="@+id/rent_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/rent_head"
                android:text="德玛西亚"/>

            <TextView
                android:id="@+id/rent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="12月15日"/>


        </RelativeLayout>

        <View
            android:layout_below="@id/item_top"
            style="@style/line_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/item_top">

            <ImageView
                android:id="@+id/rent_img"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_goods"
                android:layout_marginBottom="5dp"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_top"
                android:paddingBottom="15dp"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/item_center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/rent_goodsname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="迈特凯"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentLeft="true"
                            />

                        <TextView
                            android:id="@+id/rent_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥12.00"
                            android:textColor="@color/red"
                            android:layout_marginRight="15dp"
                            android:textSize="18dp"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/rent_describe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="大家好，我是凯老师……，我超级腻害，我可以一个打十个，渣渣卡卡西"
                        android:layout_below="@id/item_center"/>

                    <View
                        android:layout_above="@id/item_describe"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        style="@style/line_vertical" />

                    <View
                        android:layout_below="@id/item_describe"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        style="@style/line_vertical" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/reng_tag"
                    android:visibility="gone"
                    android:layout_gravity="bottom|right"
                    android:src="@drawable/icon_user_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
