<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/item_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:src="@drawable/default_head">


            </de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:id="@+id/item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/item_head"
                android:text="德玛西亚"/>

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:text="12月15日"/>


        </RelativeLayout>

        <View
            android:layout_below="@id/item_top"
            style="@style/line_vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/item_top">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/default_goods"
                android:layout_marginBottom="5dp"
            />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_top"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:id="@+id/item_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/item_goodsname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="迈特凯"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:id="@+id/item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥12.00"
                        android:textColor="@color/red"
                        android:layout_marginRight="15dp"
                        android:textSize="18dp"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>




                <TextView
                    android:id="@+id/item_describe"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:text="大家好，我是凯老师……，我超级腻害，我可以一个打十个，渣渣卡卡西"
                    android:layout_below="@id/item_center"/>

                <View
                    android:layout_above="@id/item_describe"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/line_vertical" />

                <View
                    android:layout_below="@id/item_describe"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/line_vertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_describe">

                    <TextView
                        android:id="@+id/home_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1024m"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="5dp"
                        android:drawableLeft="@drawable/icon_map"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:id="@+id/home_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="喜欢"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="5dp"
                        android:drawableLeft="@drawable/icon_like"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
