<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:id="@+id/txt_select_category1"
            android:hint=" 类 型 一 "
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/spinner_category1"
            android:entries="@array/category1"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:id="@+id/txt_select_category2"
            android:hint=" 类 型 二 "
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/spinner_category2"
            android:entries="@array/category2_1"
            android:layout_gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_select_distance"
            android:textSize="16sp"
            android:hint=" 距 离 之 内 :"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/spinner_distance"
            android:entries="@array/select_distance"
            android:layout_gravity="center"
            />

    </LinearLayout>
</LinearLayout>
