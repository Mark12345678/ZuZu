<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/conversationlist_item_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:src="@drawable/default_head">


    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/conversationlist_item_name"
        android:layout_toRightOf="@id/conversationlist_item_head"
        android:text="好友名字"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:textColor="@color/dimgrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/conversationlist_item_phone"
        android:layout_below="@id/conversationlist_item_name"
        android:layout_toRightOf="@id/conversationlist_item_head"
        android:text="1552103xxxx"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/dimgrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
